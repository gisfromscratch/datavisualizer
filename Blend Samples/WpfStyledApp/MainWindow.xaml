<Window x:Class="WpfStyledApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfStyledApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Style="{DynamicResource GridStyle}">
        <ToolBar x:Name="toolBar" VerticalAlignment="Top" d:LayoutOverrides="Width" Background="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}">
            <Button x:Name="button" Content="Button" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="75" Style="{DynamicResource ButtonStyle}"/>
        </ToolBar>

    </Grid>
</Window>
